# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4o                # Default model to use
OPENAI_TIMEOUT=60000               # Timeout in milliseconds

# Anthropic Configuration (optional, for fallback)
ANTHROPIC_API_KEY=your_anthropic_api_key_here
ANTHROPIC_MODEL=claude-3-opus-20240229  # Default model to use
ANTHROPIC_TIMEOUT=60000                 # Timeout in milliseconds

# Environment
NODE_ENV=development               # development, staging, or production
PORT=3000                          # Server port

# API Configuration
API_BASE_URL=http://localhost:3000 # Base URL for API endpoints
CORS_ORIGIN=*                      # CORS configuration (use specific domains in production)

# Provider Failover Configuration
ENABLE_PROVIDER_FAILOVER=true      # Enable automatic failover between providers
MAX_RETRIES=3                      # Maximum number of retries before failing
RETRY_DELAY_MS=1000                # Initial delay between retries (will increase exponentially)
CIRCUIT_BREAKER_THRESHOLD=5        # Number of failures before circuit breaker opens
CIRCUIT_BREAKER_RESET_TIMEOUT=60000 # Time in ms before circuit breaker resets

# Logging Configuration
LOG_LEVEL=info                     # debug, info, warn, error
ENABLE_REQUEST_LOGGING=true        # Log API requests

# Rate Limiting
RATE_LIMIT_MAX=100                 # Maximum requests per window
RATE_LIMIT_WINDOW_MS=60000         # Window size in milliseconds (1 minute)

# Security
ENABLE_HELMET=true                 # Enable Helmet security headers